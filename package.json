{
    "name": "markdown-notes",
    "displayName": "Markdown note-taking",
    "description": "Note-taking with markdown",
    "version": "0.0.1",
    "publisher": "mortenjust",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "markdown",
            "aliases": ["Markdown Notes", "markdown"],
            "extensions": [".md",".mdown",".markdown",".markdn"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "markdown",
            "scopeName": "text.html.markdown",
            "path": "./syntaxes/markdown.tmLanguage"
        }], 
        "themes": [
                {
                    "label": "Note Dark Pro",
                    "uiTheme": "vs-dark",
                    "path": "./themes/NoteDark-Pro.json"
                }
            ]
    }
}